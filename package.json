{
  "name": "whitehat-sr",
  "version": "1.0.0",
  "description": "Portal for Whitehat community",
  "main": "app.js",
  "engines": {
    "node": "10.16.0"
  },
  "scripts": {
    "build": "cd src/client/app && npm run build",
    "install-client": "cd src/client/app && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "client": "cd src/client/app && npm start",
    "start": "node src/server.js",
    "dev": "concurrently -n 'server,client' -c 'red,green'  \"nodemon src/server.js\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piyushg9794/Whitehat-Sr"
  },
  "author": "Piyush",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piyushg9794/Whitehat-Sr/issues"
  },
  "homepage": "https://github.com/piyushg9794/Whitehat-Sr#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "connect-busboy": "0.0.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.13",
    "morgan": "^1.10.0",
    "pm2": "^4.5.0"
  }
}
